{
	"compilerOptions": {
		"module": "ES2020",
		"target": "ES2020",
		"sourceMap": true,
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"jsx": "preserve",
		"noImplicitAny": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "./types"
	},
	"include": ["src/**/*.js"],
	"exclude": ["node_modules", "test", "dist", "webpack"]
}
