{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2022",
		"sourceMap": true,
		"allowJs": true,
		"checkJs": true,
		"noUnusedLocals": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"noImplicitAny": false,
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": true,
		"declarationDir": "./types",
		"outDir": "./types",
		"typeRoots": ["./types", "./contracts"],
		"types": [],
		"noEmit": false
	},
	"include": ["./src/**/*.js", "./contracts"],
	"exclude": ["node_modules", "test", "dist", "webpack", "./src/langs", "./src/assets", "./types/**/*.d.ts"]
}
